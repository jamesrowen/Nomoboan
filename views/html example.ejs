<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
	  <meta name="author" content="James Rowen">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boilerplate</title>
    
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
    <link rel="shortcut icon" href="../assets/ico/favicon.png">
</head>

<body style="padding-top:40px">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
 
                <a class="brand" href="#">Boilerplate</a>
 
                <!-- these are collapsed at 940px or less-->
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container" style="margin-top:20px">

        <!-- Main hero unit -->
        <div class="hero-unit">
            <h1>Welcome</h1>
            <p>This is my boilerplate</p>
            <p><a href="#" class="btn btn-primary btn-large">Do nothing &raquo;</a></p>
        </div>

        <!-- row of columns -->
        <div class="row">
            <div class="span3">
                <form action="/" method="post">
                        <legend>Enter a Contact</legend>
                        <label>Name</label>
                        <input type="text" name="name" placeholder="Joe Shmoe">
                        <br />
                        <label>Email</label>
                        <input type="text" name="email" placeholder="joeshmoe@gmail.com">
                        <br />
                        <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="span9">
                <h2>Contacts</h2>
                <ul>
                    <% for(var i=0; i<contacts.length; i++) {%>
                        <li><%= contacts[i].name %> - <a href="mailto:<%= contacts[i].email %>"><%= contacts[i].email %></a></li>
                    <% } %>
                </ul>
            </div>
        </div>

        <hr>

        <footer>
        <p>&copy; James Rowen 2013</p>
        </footer>

    </div>

    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>
